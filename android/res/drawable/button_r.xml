<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:constantSize="false"
    android:dither="false"
    android:variablePadding="false">
    <item
        android:state_pressed="true" >
		<shape
		    xmlns:android="http://schemas.android.com/apk/res/android"
		    android:shape="rectangle" >
		    <corners
		        android:topLeftRadius="0dp"
        		android:topRightRadius="6dp"
        		android:bottomLeftRadius="6dp"
        		android:bottomRightRadius="0dp" />
		    <padding
		        android:left=  "6dp"
		        android:top=   "6dp"
		        android:right= "6dp"
		        android:bottom="6dp" />
		    <solid
		        android:color="#666" />
			<stroke
				android:width="2dp"
				android:color="#000"
				/>
		</shape>
	</item>
    <item
        android:state_checked="true" >
		<shape
		    xmlns:android="http://schemas.android.com/apk/res/android"
		    android:shape="rectangle" >
		    <corners
		        android:topLeftRadius="0dp"
        		android:topRightRadius="6dp"
        		android:bottomLeftRadius="6dp"
        		android:bottomRightRadius="0dp" />
		    <padding
		        android:left=  "6dp"
		        android:top=   "6dp"
		        android:right= "6dp"
		        android:bottom="6dp" />
		    <solid
		        android:color="#444" />
			<stroke
				android:width="2dp"
				android:color="#000"
				/>
		</shape>
	</item>
    <item>
        <shape
		    xmlns:android="http://schemas.android.com/apk/res/android"
		    android:shape="rectangle" >
		    <corners
		        android:topLeftRadius="0dp"
        		android:topRightRadius="6dp"
        		android:bottomLeftRadius="6dp"
        		android:bottomRightRadius="0dp" />
		    <padding
		        android:left=  "6dp"
		        android:top=   "6dp"
		        android:right= "6dp"
		        android:bottom="6dp" />
		    <solid
		        android:color="#222" />
		    <stroke
		    	android:width="2dp"
		    	android:color="#000"
		    	/>
		</shape>
	</item>
</selector>
